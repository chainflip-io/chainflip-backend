[Unit]
Description=Chainflip Broker Api

[Service]
Restart=always
RestartSec=5
Type=simple

ExecStart=/usr/bin/chainflip-broker-api \
      --state_chain.ws_endpoint=ws://localhost:9944 \
      --state_chain.signing_key_file /etc/chainflip/keys/signing_key_file \
      --port 10997

StandardOutput=append:/var/log/chainflip-broker-api.log
StandardError=append:/var/log/chainflip-broker-api.log

[Install]
WantedBy=multi-user.target